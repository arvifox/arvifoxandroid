<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/col2"
        android:clipChildren="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/col3"
            android:clipChildren="false"
            android:orientation="horizontal">

            <soup.neumorphism.NeumorphButton
                style="@style/Widget.Neumorph.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hskdljfll"
                android:textColor="@color/col3"
                android:textSize="8sp"
                app:neumorph_backgroundColor="@color/col2" />

            <soup.neumorphism.NeumorphImageButton
                style="@style/Widget.Shadowtest.Style.0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_neu_send"
                android:tint="@color/col3" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray" />

            <soup.neumorphism.NeumorphImageButton
                style="@style/Widget.Shadowtest.Style.1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_neu_send"
                android:tint="@color/col3" />
            <soup.neumorphism.NeumorphImageButton
                style="@style/Widget.Shadowtest.Style.1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_neu_send"
                android:tint="@color/col3" />
        </LinearLayout>

        <View
            android:layout_width="5dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textColor="@color/black" />

        <View
            android:layout_width="5dp"
            android:layout_height="5dp" />

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:elevation="10dp"
            android:src="@drawable/ic_qwe"
            tools:ignore="ContentDescription" />

        <View
            android:layout_width="5dp"
            android:layout_height="25dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/col1"
            android:elevation="10dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_qwe"
            tools:ignore="ContentDescription" />

        <View
            android:layout_width="5dp"
            android:layout_height="25dp" />

        <com.arvifox.shadowtest.IconView
            android:id="@+id/ico1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/col3" />

        <View
            android:layout_width="5dp"
            android:layout_height="25dp" />

        <com.arvifox.shadowtest.IcoonView
            android:id="@+id/ico2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/col3" />

        <View
            android:layout_width="5dp"
            android:layout_height="25dp" />

        <com.arvifox.shadowtest.IcoonView
            android:id="@+id/ico3"
            android:layout_width="190dp"
            android:layout_height="100dp" />

        <View
            android:layout_width="5dp"
            android:layout_height="25dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/round"
            tools:ignore="ContentDescription" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
